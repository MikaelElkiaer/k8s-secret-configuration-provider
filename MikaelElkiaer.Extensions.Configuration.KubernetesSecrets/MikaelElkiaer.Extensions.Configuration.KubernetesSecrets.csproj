<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>MikaelElkiaer.Extensions.Configuration.KubernetesSecrets</RootNamespace>
    <Version>1.0.0</Version>
    <Authors>MikaelElkiar</Authors>
    <RepositoryUrl>https://github.com/MikaelElkiaer/k8s-secrets-configuration-provider</RepositoryUrl>
    <Description>A .NET Core configuration provider using Kubernetes secrets</Description>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageTags>kubernetes configuration configurationprovider secret</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="KubernetesClient" Version="7.0.15" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="5.0.0" />
  </ItemGroup>
</Project>
